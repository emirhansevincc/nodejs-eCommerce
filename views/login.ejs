   <link rel="stylesheet" href="/css/owl.carousel.min.css">
   <link rel="stylesoeet" href="/css/owl.theme.default.min.css">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css"
      media="screen">
</head>

<body>
   <!-- banner bg main start -->
   <div class="banner_bg_main">
      <!-- header top section start -->
      <div class="container">
         <div class="header_section_top">
            <div class="row">
               <div class="col-sm-12">
                  <div class="custom_menu">
                     <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/products?categories=fashion">Fashion</a></li>
                        <li><a href="/products?categories=electronic">Electronic</a></li>
                        <li><a href="/products?categories=jewellery">Jewellery</a></li>
                        <li><a href="#">Customer Service</a></li>
                     </ul>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <!-- header top section start -->
      <!-- logo section start -->
      <div class="logo_section">
         <div class="container">
            <div class="row">
               <div class="col-sm-12">
                  <div class="logo"><a href="index.html"><img src="images/logo.png"></a></div>
               </div>
            </div>
         </div>
      </div>
      <!-- logo section end -->
      <!-- header section start -->
      <div class="header_section">
         <div class="container">
            <div class="containt_main">
               <div id="mySidenav" class="sidenav">
                  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                  <a href="/">Home</a>
                  <a href="/products?categories=fashion">Fashion</a>
                  <a href="/products?categories=electronic">Electronic</a>
                  <a href="/products?categories=jewellery">Jewellery</a>
               </div>
               <span class="toggle_icon" onclick="openNav()"><img src="images/toggle-icon.png"></span>
               <div class="main">
               </div>
               <div class="header_box">
                  <div class="login_menu">
                     <ul>
                        <li><a href="#">
                              <i class="fa fa-user" aria-hidden="true"></i>
                              <span class="padding_10">Login</span></a>
                        </li>
                        <li><a href="/register">
                           <i class="fa fa-user" aria-hidden="true"></i>
                           <span class="padding_10">Register</span></a>
                        </li>
                     </ul>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <!-- header section end -->

    <div class="fashion_section">
        <div class="card register">
                <form action="/users/login" method="POST">
                    <div class="inputs">
                        <div class="form-container">
                           <h1>LOGIN</h1>
                           <% if (flashMessages) { %>
                              <% if (flashMessages.error) { %>
                                 <div style="background-color: red; width: 70%; margin: 20px auto;color: white; padding: 4px;text-align: center;border-radius: 15px;">
                                    <div>
                                       <p><%= flashMessages.error %></p>
                                    </div>
                                 </div>
                              <% } %>
                           <% } %>
                           <input type="email" name="email" placeholder="Enter Your Email">
                           <input type="password" name="password" placeholder="Enter Your Password">
                           <button type="submit">Login</button>
                        </div>
                    </div>
              </form>
        </div>
    </div>

 <script>
    function openNav() {
       document.getElementById("mySidenav").style.width = "250px";
    }

    function closeNav() {
       document.getElementById("mySidenav").style.width = "0";
    }
 </script>

